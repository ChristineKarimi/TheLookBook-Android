<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.BookDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bookImageDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Book Image"
            android:src="@drawable/theshininglarge"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/bookTitleDetail"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="124dp"
            android:layout_marginStart="124dp"
            android:fontFamily="@font/opensans_bolditalic"
            android:text="The Shining (The Shining, #1)" />

        <TextView
            android:id="@+id/bookDescriptionDetail"
            android:layout_width="241dp"
            android:layout_height="126dp"
            android:layout_alignStart="@+id/bookTitleDetail"
            android:layout_centerVertical="true"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/bookDescriptionDetail"
            android:textSize="11dp"
            android:layout_alignLeft="@+id/bookTitleDetail" />

        <TextView
            android:id="@+id/bookAuthorName"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bookTitleDetail"
            android:layout_below="@+id/bookTitleDetail"
            android:text="By Stephen King"
            android:textSize="12dp"
            android:fontFamily="@font/opensans_lightitalic"
            android:layout_alignLeft="@+id/bookTitleDetail" />

    </RelativeLayout>
</FrameLayout>