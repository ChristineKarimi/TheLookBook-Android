<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/whichBookEditText"
        android:src="@drawable/bestbooks" />

    <TextView
        android:id="@+id/introductionTextView"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="An Android App that uses GoodReads API to retrieve details / data on books and their respective authors. This application is part of the Weekly Independent Project." />

    <TextView
        android:id="@+id/whichBookTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/introductionTextView"
        android:layout_marginTop="78dp"
        android:text="Let's Start! Which book are you currently reading?" />

    <EditText
        android:id="@+id/whichBookEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/introductionTextView"
        android:layout_below="@+id/whichBookTextView"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>